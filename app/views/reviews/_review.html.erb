
<p><%= review.raiting %></p>
<p><%= review.comment %></p>
<hr>

<% if user_signed_in? %>
  <% if review.user_id == current_user.id %>
    <div>
      <%= link_to "Edit Review", edit_book_review_path(review.book, review) %>
      <%= link_to "Delete Review", book_review_path(review.book, review), method: :delete, data: {confirm: "Are you sure?"}  %>
    </div>
  <% end %>
<% end %>
