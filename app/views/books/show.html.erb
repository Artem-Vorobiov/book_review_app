<%= image_tag @book.book_img.url(:book_show) %>

<h4><%= @book.category.name %></h4>
<h2><%= @book.title %></h2>

<h3><%= @book.description %></h3>

<p><%= @book.author %></p>

<%= render @book.reviews %>

<%= link_to "Back", root_path %>

<div>
<% if user_signed_in? %>

      <%= link_to "Review Add", new_book_review_path(@book) %>

  <% if @book.user_id == current_user.id %>
    <%= link_to 'Delete', book_path(@book), method: :delete, data: {confirm: "Are you sure?"} %>
    <%= link_to 'Edit', edit_book_path(@book) %>
  <% end %>  
<% end %>
</div>
